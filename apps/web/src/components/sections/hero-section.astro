---
import Strapi from '@/components/strapi.astro';
import AstroLogo from '@/components/astro-logo.astro';
import CommandPm from '../command-pm.astro';
import Button from '../globals/button.astro';
import Github from '../icons/github.astro';
---

<section
  class="pt-14 pb-8 sm:pt-24 sm:pb-16 px-4 xl:px-0 max-w-6xl mx-auto flex flex-col gap-y-8 sm:gap-y-11"
>
  <div class="flex flex-col gap-4 items-center">
    <a
      href="https://www.npmjs.com/package/strapi2front"
      target="_blank"
      rel="noopener noreferrer"
      class="w-fit text-white border border-dashed bg-[#202020] border-[#424242] leading-tight pt-1 pb-0.5 lg:pt-2 lg:pb-1 px-2.5 text-xs lg:text-lg"
      >v0.1.0</a
    >
    <div class="flex flex-col items-center gap-2 sm:gap-3.5">
      <h1
        class="text-2xl sm:text-3xl md:text-6xl flex flex-col items-center gap-y-0 sm:gap-y-1 lg:gap-y-2 font-normal tracking-tight"
      >
        <span class="text-white inline-flex items-center gap-x-3.5 sm:gap-x-5 lg:gap-x-7">
          From <Strapi
            class="h-6 sm:h-8 md:h-12 w-auto inline translate-0 sm:translate-y-0.5 lg:translate-y-1"
          /> to your
        </span>
        <span class="text-white inline-flex gap-x-3 sm:gap-x-4 lg:gap-x-6">
          <AstroLogo
            class="h-6 sm:h-7 md:h-[50px] w-auto inline translate-y-2 sm:translate-y-2.5"
          />
          <span>in seconds<span class="animate-blink">_</span></span>
        </span>
      </h1>
      <p
        class="text-[#EBEBEB] font-light text-sm sm:text-lg md:text-[1.6rem] leading-tight max-w-[30ch] sm:max-w-[36ch] text-center"
      >
        Generate types, services, and Astro Actions automatically.
      </p>
    </div>
  </div>

  <div class="flex flex-col gap-6">
    <CommandPm
      commands={{
        npm: 'npx strapi2front@latest',
        pnpm: 'pnpm dlx strapi2front@latest',
        yarn: 'yarn dlx strapi2front@latest',
        bun: 'bunx strapi2front@latest',
      }}
    />
    <div class="w-fit mx-auto flex gap-2.5">
      <Button href="#steps" class="w-fit border border-white cursor-pointer"> Get Started </Button>
      <Button
        href="https://github.com/Eleven-Estudio/strapi2front"
        target="blank"
        class="w-fit inline-flex justify-center gap-2 hover:text-black text-white cursor-pointer"
        variant={'outline'}
      >
        <span class="text-nowrap">GitHub Repo</span>
        <Github class="fill-current h-3.5 md:h-5 w-3.5 md:w-5" />
      </Button>
    </div>
  </div>
</section>
